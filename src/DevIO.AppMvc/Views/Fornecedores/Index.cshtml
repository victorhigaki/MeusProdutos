@model IEnumerable<DevIO.AppMvc.ViewModels.FornecedorViewModel>

@{
    ViewBag.Title = "Lista de Fornecedores";
}

<h2>@ViewBag.Title</h2>

<hr />

<p>
    <a class="btn btn-info" href="@Url.Action("Create", "Fornecedores")">Novo Fornecedor</a>   
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Documento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td class="text-right">
                    <a class="btn btn-warning" href="@Url.Action("Details", "Fornecedores", new { id = item.Id })"><span class="glyphicon glyphicon-search"></span> Detalhes</a>
                    <a class="btn btn-info" href="@Url.Action("Edit", "Fornecedores", new { id = item.Id })"><span class="glyphicon glyphicon-pencil"></span> Editar</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", "Fornecedores", new { id = item.Id })"><span class="glyphicon glyphicon-trash"></span> Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>